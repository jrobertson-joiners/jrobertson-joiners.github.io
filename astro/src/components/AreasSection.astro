---
import { serviceAreas } from '../data/areas';

interface Props {
  /**
   * Optional background class. Default is transparent.
   * Use 'bg-[var(--light-gray)]' for grey background.
   */
  background?: string;
}

const { background = '' } = Astro.props;
---

<section class:list={['py-16', background]}>
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-2xl font-bold text-slate-900 mb-4">Areas We Cover</h2>
    <p class="text-slate-600 mb-6">
      Based in Stirling (FK8), we regularly work across the surrounding Central Scotland area:
    </p>
    <ul class="grid gap-2 text-slate-700 sm:grid-cols-2 md:grid-cols-4">
      {serviceAreas.map(area => (
        <li class="flex items-center gap-2">
          <span class="h-2 w-2 rounded-full bg-[var(--accent-wood)]"></span>
          {area}
        </li>
      ))}
    </ul>
  </div>
</section>
