---
import { SITE, MENU_LINKS } from '../data/site';
const currentYear = new Date().getFullYear();
---

<footer class="bg-slate-950 text-white py-6">
  <div class="max-w-6xl mx-auto px-4 flex flex-col gap-4 md:flex-row md:items-center md:justify-between text-sm">
    <p>Â© {currentYear} Jamie Robertson Joiners. All rights reserved.</p>
    <div class="flex gap-6 flex-wrap items-center">
      <a href="/" class="hover:text-[var(--accent-wood)]">Home</a>
      {MENU_LINKS.map(link => (
        <a href={link.href} class="hover:text-[var(--accent-wood)]">{link.label}</a>
      ))}
      <a href={SITE.social.facebook} class="hover:text-[var(--accent-wood)]" target="_blank"
        rel="noreferrer noopener">Facebook</a>
      <a href={SITE.whatsappUrl} class="hover:text-[var(--accent-wood)]" target="_blank"
        rel="noreferrer noopener">WhatsApp</a>
    </div>
  </div>
</footer>
