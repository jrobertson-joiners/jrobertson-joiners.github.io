---
interface Props {
  variant?: 'primary' | 'secondary';
}

const { variant = 'primary' } = Astro.props;

const baseClasses = "inline-flex items-center justify-center gap-2 rounded-full px-6 py-3 font-semibold shadow-lg transition";
const variantClasses = variant === 'primary' 
  ? "bg-[var(--accent-wood)] text-white hover:bg-orange-700"
  : "bg-white text-[var(--primary-dark)] hover:bg-slate-100";
---

<div class="rounded-2xl bg-[var(--primary-dark)] text-white p-8 shadow-lg">
  <p class="text-sm font-semibold text-orange-200 mb-4">Ready to get started?</p>
  <h3 class="text-2xl font-bold mb-4">Let's discuss your project</h3>
  <p class="text-white/80 mb-6">
    Whether you're planning a kitchen refresh, loft conversion, or full contract build, we're here to help. Get in touch for a friendly chat and free quote.
  </p>
  <div class="flex flex-wrap gap-4">
    <a href="/v2/contact/" class={`${baseClasses} bg-white text-[var(--primary-dark)] hover:bg-slate-100`}>
      Get in Touch
    </a>
    <a href="tel:07917113063" class={`${baseClasses} border border-white/30 text-white hover:bg-white/10`}>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3 5h2l2 5-2 1c1 4 4 7 8 8l1-2 5 2v2c0 1-1 2-2 2a16 16 0 01-16-16c0-1 1-2 2-2z" />
      </svg>
      07917 113 063
    </a>
  </div>
</div>
