---
import Base from '../layouts/Base.astro';
import OrganizationSchema from '../components/schema/OrganizationSchema.astro';
import ContactSchema from '../components/schema/ContactSchema.astro';
import BreadcrumbSchema from '../components/schema/BreadcrumbSchema.astro';
---

<Base
  title="Contact Us | Jamie Robertson Joiners | Stirling"
  description="Get in touch with Jamie Robertson Joiners for a free quote on joinery, kitchens, loft conversions, and building work in Stirling and Central Scotland."
  canonicalPath="/contact/"
>
  <Fragment slot="head">
    <OrganizationSchema />
    <ContactSchema />
    <BreadcrumbSchema items={[
      { name: 'Home', url: 'https://jrobertson-joiners.co.uk/' },
      { name: 'Contact Us', url: 'https://jrobertson-joiners.co.uk/contact/' }
    ]} />
  </Fragment>
  <!-- Hero Section -->
  <section class="bg-[var(--primary-dark)] text-white py-16">
    <div class="max-w-6xl mx-auto px-4">
      <p class="text-sm font-semibold text-orange-200 mb-2">Get in touch</p>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Contact Us</h1>
      <p class="text-lg text-white/80 max-w-2xl">
        Ready to discuss your project? We'd love to hear from you.
      </p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-16">
    <div class="max-w-6xl mx-auto px-4 grid gap-8 lg:grid-cols-2">
      <!-- Contact Info -->
      <div class="rounded-2xl bg-[var(--primary-dark)] text-white p-8 shadow-lg">
        <p class="text-sm font-semibold text-orange-200 mb-4">Contact Details</p>
        <ul class="space-y-6">
          <li class="flex items-start gap-4">
            <span class="mt-1 text-[var(--accent-wood)]">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round"
                  d="M3 5h2l2 5-2 1c1 4 4 7 8 8l1-2 5 2v2c0 1-1 2-2 2a16 16 0 01-16-16c0-1 1-2 2-2z" />
              </svg>
            </span>
            <div>
              <p class="text-xs uppercase tracking-wide text-white/70">Phone</p>
              <p class="text-lg font-semibold">
                <a href="tel:07917113063" class="hover:text-[var(--accent-wood)] transition-colors">07917 113 063</a>
              </p>
            </div>
          </li>
          <li class="flex items-start gap-4">
            <span class="mt-1 text-[var(--accent-wood)]">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l9 6 9-6" />
                <path stroke-linecap="round" stroke-linejoin="round"
                  d="M5 6h14a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2z" />
              </svg>
            </span>
            <div>
              <p class="text-xs uppercase tracking-wide text-white/70">Email</p>
              <p class="text-lg font-semibold">
                <a href="mailto:info@jrobertson-joiners.co.uk"
                  class="hover:text-[var(--accent-wood)] transition-colors">info@jrobertson-joiners.co.uk</a>
              </p>
            </div>
          </li>
          <li class="flex items-start gap-4">
            <span class="mt-1 text-[var(--accent-wood)]">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </span>
            <div>
              <p class="text-xs uppercase tracking-wide text-white/70">Service Area</p>
              <p class="text-lg font-semibold">Stirling & Central Scotland</p>
            </div>
          </li>
        </ul>
        
        <div class="mt-8 pt-6 border-t border-white/20">
          <p class="text-sm text-white/70 mb-4">Prefer to message?</p>
          <a href="https://wa.me/447917113063"
            class="w-full inline-flex items-center justify-center gap-2 rounded-full bg-white px-6 py-3 font-semibold text-[var(--primary-dark)] shadow-lg hover:bg-slate-100"
            target="_blank" rel="noreferrer noopener">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-600" viewBox="0 0 32 32"
              fill="currentColor">
              <path
                d="M16.04 5a10.9 10.9 0 00-9.35 16.47L5 27l5.7-1.66A11 11 0 1016.04 5zm6.13 15.72c-.25.7-1.45 1.35-2.04 1.44-.56.08-1.27.12-2.06-.13a18 18 0 01-2-.76c-3.54-1.54-5.83-5.13-6-5.37-.17-.24-1.43-1.9-1.43-3.62s.9-2.57 1.21-2.93.7-.43.94-.43.47 0 .68 0c.22 0 .51-.08.8.6.3.7 1.02 2.43 1.11 2.6.09.17.15.37.03.61-.12.24-.18.37-.34.57-.17.2-.35.46-.15.87.2.4.9 1.46 1.94 2.37 1.33 1.18 2.45 1.55 2.85 1.74.4.18.64.15.88-.09.23-.23 1-1.16 1.27-1.56.27-.4.52-.33.88-.2.36.14 2.32 1.09 2.72 1.28.4.2.67.3.77.46.1.17.1.96-.15 1.66z" />
            </svg>
            Message on WhatsApp
          </a>
        </div>

        <div class="mt-6">
          <a href="https://www.facebook.com/jrobertsonjoiners2016"
            class="w-full inline-flex items-center justify-center gap-2 rounded-full border border-white/30 px-6 py-3 font-semibold text-white hover:bg-white/10"
            target="_blank" rel="noreferrer noopener">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
            Follow on Facebook
          </a>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="rounded-2xl bg-white p-8 shadow-lg border border-slate-200">
        <h2 class="text-2xl font-semibold text-slate-900 mb-6">
          Send a quick message
        </h2>
        <form id="contact-form" action="https://formspree.io/f/mjkdyrzo" method="POST" class="space-y-5">
          <input type="hidden" name="_subject" value="New enquiry from website" />
          <div>
            <label for="name" class="block text-sm font-medium text-slate-700">Name</label>
            <input type="text" id="name" name="name" autocomplete="name"
              class="mt-2 w-full rounded-xl border border-slate-200 px-4 py-3 focus:border-[var(--accent-wood)] focus:ring-[var(--accent-wood)] focus:outline-none"
              placeholder="Your full name" required />
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-slate-700">Email</label>
            <input type="email" id="email" name="email" autocomplete="email"
              class="mt-2 w-full rounded-xl border border-slate-200 px-4 py-3 focus:border-[var(--accent-wood)] focus:ring-[var(--accent-wood)] focus:outline-none"
              placeholder="name@email.com" required />
          </div>
          <div>
            <div class="flex items-center justify-between">
              <label for="phone" class="block text-sm font-medium text-slate-700">Phone</label>
              <span class="text-xs text-slate-400">Optional</span>
            </div>
            <input type="tel" id="phone" name="phone" autocomplete="tel"
              class="mt-2 w-full rounded-xl border border-slate-200 px-4 py-3 focus:border-[var(--accent-wood)] focus:ring-[var(--accent-wood)] focus:outline-none"
              placeholder="e.g. 07917 113 063" />
          </div>
          <div>
            <label for="message" class="block text-sm font-medium text-slate-700">Message</label>
            <textarea id="message" name="message" rows="4"
              class="mt-2 w-full rounded-xl border border-slate-200 px-4 py-3 focus:border-[var(--accent-wood)] focus:ring-[var(--accent-wood)] focus:outline-none"
              placeholder="Tell us about your project" required></textarea>
          </div>
          <button type="submit"
            class="w-full rounded-full bg-[var(--accent-wood)] px-6 py-3 font-semibold text-white shadow-lg transition hover:bg-orange-700">
            Send Message
          </button>
          <div id="form-status" class="hidden text-center text-sm" aria-live="polite"></div>
          <p class="text-xs text-slate-500 mt-3">
            By submitting this form, you agree that we may store and use your details to respond to your enquiry. We
            will not share your information with third parties.
          </p>
        </form>
      </div>
    </div>
  </section>

  <Fragment slot="scripts">
    <script>
      const form = document.getElementById("contact-form") as HTMLFormElement;
      const status = document.getElementById("form-status") as HTMLElement;

      async function handleSubmit(event: Event) {
        event.preventDefault();
        const data = new FormData(form);

        status.classList.remove('hidden');
        status.textContent = 'Sending...';
        status.className = 'mt-4 text-center text-sm text-slate-600';

        try {
          const response = await fetch(form.action, {
            method: form.method,
            body: data,
            headers: {
              'Accept': 'application/json'
            }
          });

          if (response.ok) {
            status.textContent = "Thank you for your message! We'll be in touch soon.";
            status.className = 'mt-4 text-center text-sm text-green-600 font-medium';
            form.reset();
          } else {
            const result = await response.json();
            if (Object.hasOwn(result, 'errors')) {
              status.textContent = result.errors.map((error: {message: string}) => error.message).join(", ");
            } else {
              status.textContent = "Oops! There was a problem submitting your form";
            }
            status.className = 'mt-4 text-center text-sm text-red-600';
          }
        } catch (error) {
          status.textContent = "Oops! There was a problem submitting your form";
          status.className = 'mt-4 text-center text-sm text-red-600';
        }
      }

      form.addEventListener("submit", handleSubmit);
    </script>
  </Fragment>
</Base>
