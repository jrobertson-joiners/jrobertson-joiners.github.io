---
import Base from '../../layouts/Base.astro';
import ContactCTA from '../../components/ContactCTA.astro';
import OrganizationSchema from '../../components/schema/OrganizationSchema.astro';
import ServiceSchema from '../../components/schema/ServiceSchema.astro';
import BreadcrumbSchema from '../../components/schema/BreadcrumbSchema.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const services = await getCollection('services');
  return services.map(service => ({
    params: { slug: service.slug },
    props: { service },
  }));
}

const { service } = Astro.props;
const { Content } = await service.render();

const serviceUrl = `https://jrobertson-joiners.co.uk/v2/services/${service.slug}/`;
const areas = service.data.areas || ['Stirling', 'Bridge of Allan', 'Dunblane', 'Bannockburn'];
---

<Base
  title={`${service.data.title} | Jamie Robertson Joiners`}
  description={service.data.description}
  canonicalPath={`/services/${service.slug}/`}
>
  <Fragment slot="head">
    <OrganizationSchema />
    <ServiceSchema 
      name={service.data.title}
      description={service.data.description}
      url={serviceUrl}
      serviceType={service.data.title}
      areaServed={areas}
    />
    <BreadcrumbSchema items={[
      { name: 'Home', url: 'https://jrobertson-joiners.co.uk/v2/' },
      { name: 'Services', url: 'https://jrobertson-joiners.co.uk/v2/services/' },
      { name: service.data.title, url: serviceUrl }
    ]} />
  </Fragment>
  <!-- Hero Section -->
  <section class="bg-[var(--primary-dark)] text-white py-16">
    <div class="max-w-6xl mx-auto px-4">
      <nav class="text-sm text-white/60 mb-4">
        <a href="/v2/" class="hover:text-white">Home</a>
        <span class="mx-2">/</span>
        <a href="/v2/services/" class="hover:text-white">Services</a>
        <span class="mx-2">/</span>
        <span class="text-white">{service.data.title}</span>
      </nav>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">{service.data.title}</h1>
      <p class="text-lg text-white/80 max-w-2xl">{service.data.shortDescription}</p>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4">
      <article class="prose prose-slate prose-lg max-w-none prose-headings:text-slate-900 prose-a:text-[var(--accent-wood)] prose-a:no-underline hover:prose-a:underline">
        <Content />
      </article>
    </div>
  </section>

  <!-- Areas Covered -->
  {service.data.areas && service.data.areas.length > 0 && (
    <section class="py-16 bg-[var(--light-gray)]">
      <div class="max-w-4xl mx-auto px-4">
        <h2 class="text-2xl font-bold text-slate-900 mb-4">Service Areas</h2>
        <p class="text-slate-600 mb-6">We provide {service.data.title.toLowerCase()} services across:</p>
        <ul class="grid gap-2 text-slate-700 sm:grid-cols-2 md:grid-cols-3">
          {service.data.areas.map((area: string) => (
            <li class="flex items-center gap-2">
              <span class="h-2 w-2 rounded-full bg-[var(--accent-wood)]"></span>
              {area}
            </li>
          ))}
        </ul>
      </div>
    </section>
  )}

  <!-- Contact CTA -->
  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4">
      <ContactCTA />
    </div>
  </section>
</Base>
