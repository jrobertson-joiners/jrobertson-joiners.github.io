---
import Base from '../layouts/Base.astro';
---

<Base
  title="Page Not Found | Jamie Robertson Joiners"
  description="The page you're looking for cannot be found."
  canonicalPath="/404/"
>
  <section class="py-24 text-center">
    <div class="max-w-2xl mx-auto px-4">
      <h1 class="text-6xl font-bold text-slate-900 mb-4">404</h1>
      <p class="text-xl text-slate-600 mb-8">Sorry, we couldn't find that page.</p>
      <a href="/v2/" class="inline-flex items-center rounded-full bg-[var(--accent-wood)] px-6 py-3 font-semibold text-white shadow-lg transition hover:bg-orange-700">
        Back to Home
      </a>
    </div>
  </section>
</Base>
