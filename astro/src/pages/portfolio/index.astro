---
import Base from '../../layouts/Base.astro';
import ProjectCard from '../../components/ProjectCard.astro';
import ContactCTA from '../../components/ContactCTA.astro';
import OrganizationSchema from '../../components/schema/OrganizationSchema.astro';
import BreadcrumbSchema from '../../components/schema/BreadcrumbSchema.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');

// Generate ItemList schema for portfolio
const projectsListSchema = projects.length > 0 ? {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "Joinery Projects Portfolio",
  "description": "Completed joinery and building projects by Jamie Robertson Joiners in Stirling",
  "numberOfItems": projects.length,
  "itemListElement": projects.map((project, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": project.data.title,
    "url": `https://jrobertson-joiners.co.uk/v2/portfolio/${project.slug}/`
  }))
} : null;
---

<Base
  title="Portfolio | Jamie Robertson Joiners | Stirling"
  description="View our portfolio of completed joinery and building projects across Stirling and Central Scotland. Kitchens, loft conversions, extensions, and more."
  canonicalPath="/portfolio/"
>
  <Fragment slot="head">
    <OrganizationSchema />
    <BreadcrumbSchema items={[
      { name: 'Home', url: 'https://jrobertson-joiners.co.uk/v2/' },
      { name: 'Portfolio', url: 'https://jrobertson-joiners.co.uk/v2/portfolio/' }
    ]} />
    {projectsListSchema && <script type="application/ld+json" set:html={JSON.stringify(projectsListSchema)} />}
  </Fragment>
  <!-- Hero Section -->
  <section class="bg-[var(--primary-dark)] text-white py-16">
    <div class="max-w-6xl mx-auto px-4">
      <p class="text-sm font-semibold text-orange-200 mb-2">Our work</p>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Portfolio</h1>
      <p class="text-lg text-white/80 max-w-2xl">
        Browse our recent projects to see the quality of our workmanship across kitchens, extensions, loft conversions, and more.
      </p>
    </div>
  </section>

  <!-- Projects Grid -->
  <section class="py-16 bg-[var(--light-gray)]">
    <div class="max-w-6xl mx-auto px-4">
      {projects.length > 0 ? (
        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {projects.map(project => (
            <ProjectCard
              title={project.data.title}
              description={project.data.description}
              image={project.data.image}
              href={`/v2/portfolio/${project.slug}/`}
            />
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-slate-600">Projects coming soon. Check back for updates on our recent work.</p>
        </div>
      )}
    </div>
  </section>

  <!-- Contact CTA -->
  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4">
      <ContactCTA />
    </div>
  </section>
</Base>
